# Environment Configuration for k6 Load Tests
# Copy this file to .env and modify as needed

# API Configuration
API_BASE_URL=http://localhost:8000

# Authentication
AUTH_TOKEN=your-actual-bearer-token-here

# Test Configuration
# Uncomment and modify as needed

# Override default test durations (in seconds or time format like '5m')
# SMOKE_DURATION=30s
# LOAD_DURATION=5m
# STRESS_DURATION=10m
# SPIKE_DURATION=2m

# Override default virtual user counts
# SMOKE_USERS=1
# LOAD_USERS=10
# STRESS_USERS=50
# SPIKE_USERS=100

# Debug Options
# K6_VERBOSE=true
# K6_QUIET=false
